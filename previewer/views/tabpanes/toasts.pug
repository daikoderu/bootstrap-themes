  function themeNameForVariant(variant) {
    return theme.lightTextOn.includes(variant) ? 'dark' : 'light'
  }
  function textColorForVariant(variant) {
    return theme.lightTextOn.includes(variant) ? 'text-white' : 'text-black'
  }

+tabpane("toasts")

  <div class="toast show mb-3" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
    <div class="toast-header">
      <strong class="me-auto">Bootstrap</strong>
      <small>11 mins ago</small>
      <button type="button" class="btn-close" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      | Hello, world! This is a toast message.
      <div class="mt-2 pt-2 border-top">
        <button type="button" class="btn btn-primary btn-sm">Take action</button>
        <button type="button" class="btn btn-secondary btn-sm">Close</button>
      </div>
    </div>
  </div>

  each variant in colorVariants
    <div class="toast show align-items-center bg-#{variant} #{textColorForVariant(variant)} border-0 mb-3" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false" data-bs-theme="#{themeNameForVariant(variant)}">
      <div class="d-flex">
        <div class="toast-body">Hello, world! This is a toast message.</div>
        <button type="button" class="btn-close me-2 m-auto" aria-label="Close"></button>
      </div>
    </div>