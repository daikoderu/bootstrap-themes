mixin navbar(wrapInContainer)
  if wrapInContainer
    nav.navbar.navbar-expand-lg.navbar-fixed-top
      .container
        +_navbar()
  else
    nav.navbar.navbar-expand-lg.navbar-fixed-top.px-3
      +_navbar()


mixin _navbar()
  a.navbar-brand(href="/") Daikoderu

  button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#main-nav"
  aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation")
    span.navbar-toggler-icon

  .collapse.navbar-collapse#main-nav
    ul.navbar-nav.ms-auto.mb-2.mb-lg-0
      li.nav-item.dropdown
        a.nav-link.dropdown-toggle#theme-dropdown(href="#" role="button" data-bs-toggle="dropdown" 
        aria-expanded="false") Themes
        ul.dropdown-menu.dropdown-menu-end#theme-list(aria-labelledby="theme-dropdown")
          each theme, urlName in themeList
            li
              a.dropdown-item(href=`/theme/${urlName}`)= theme.name
      li.nav-item.dropdown
        button.btn.btn-link.nav-link#bd-theme(type="button" aria-expanded="true" data-bs-toggle="dropdown") Color mode
        ul.dropdown-menu.dropdown-menu-end#theme-list(aria-labelledby="bd-theme")
          li
            button.dropdown-item(type="button" data-bs-theme-value="light") Light
          li
            button.dropdown-item(type="button" data-bs-theme-value="dark") Dark
          li
            button.dropdown-item(type="button" data-bs-theme-value="auto") Auto
