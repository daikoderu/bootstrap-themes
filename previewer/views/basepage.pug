doctype html
html
  head

    block meta
      meta(charset="utf-8")
      meta(name="viewport" content="width=device-width, initial-scale=1")

    title= htmlTitle

    block link
      link(rel="stylesheet" href=`/static/css/themes/default/bootstrap.min.css`)
      link(rel="stylesheet" href="/static/css/layout.css")

    block style
    block headscript
      script(src="/static/js/color-mode-toggler.js")

  body
    include functions.pug
    include mixins.pug
    include symbols.svg
    include navbar.pug

    block body
      block navbar
        +navbar(true)
      block content
        .container.my-4

    block bodyscript
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
